h1{
  font-size: 3em
}
h2{
  font-size: 2em
}
.smart-img{
    width:  100%
    max-height: 100%
}

.fade {
  &-enter-active, &-leave-active, &-leave-to {
    transition: 0.3s ease-out;
    position: absolute;
    top: 0;
    left: 0;
  }

  &-enter, &-leave, &-leave-to {
    opacity: 0;
  }
}

a{
  color: #1976d2
  font-weight: 500;
  text-decoration: none;
}